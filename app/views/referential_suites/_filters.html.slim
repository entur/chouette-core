= search_form_for @q, builder: SimpleForm::FormBuilder, url: workbench_output_path(@workbench), class: 'form for-filter' do |f|
  / .ffg-row
  /   .input-group.search_bar
  /     = f.search_field :ready, class: 'form-control', placeholder: 'STATUT'
  /     span.input-group-btn
  /       button.btn.btn-default#search_btn type='submit'
  /         span.fa.fa-search

  .ffg-row
    .form-group.togglable
      = f.label Referential.human_attribute_name(:ready), required: false, class: 'control-label'
      .form-group.checkbox_list
        = f.input :ready_true, as: :boolean, label: ("<span>Oui</span>").html_safe, wrapper_html: { class: 'checkbox-wrapper' }
        = f.input :ready_false, as: :boolean, label: ("<span>Non</span>").html_safe, wrapper_html: { class: 'checkbox-wrapper' }

    / .form-group
    /   = f.label Calendar.human_attribute_name(:date), class: 'control-label'
    /   = f.input :contains_date, as: :date, label: false, wrapper_html: { class: 'date smart_date' }, class: 'form-control', include_blank: true

  .actions
    = link_to 'Effacer', calendars_path, class: 'btn btn-link'
    = f.submit 'Filtrer', id: 'calendar_filter_btn', class: 'btn btn-default'
