/ PageHeader
- header_params = ['modele-referential-suite',
                   t('.title'),
                   '']
- header_params # << link_to(t('actions.add'), new_calendar_path, class: 'btn btn-default')  if policy(Calendar).create?
= pageheader(*header_params)

/ PageContent
.page_content
  .container-fluid
    - if params[:q].present? || @referentials.any?
      .row
        .col-lg-12
          = render 'filters'

    - if @referentials.any?
      .row
        .col-lg-12
          = table_builder_2 @referentials,
            [ \
              TableBuilderHelper::Column.new( \
                key: :ready, \
                attribute: 'ready', \
              ), \
              TableBuilderHelper::Column.new( \
                key: :status, \
                attribute: 'status', \
              ), \
              TableBuilderHelper::Column.new( \
                key: :created_at, \
                attribute: 'created_at', \
                link_to: lambda do |referential| \
                  referential_path(referential) \
                end \
              ), \
              TableBuilderHelper::Column.new( \
                key: :updated_at, \
                attribute: 'updated_at', \
              ), \
          ],
          links: [:show, :edit],
            cls: 'table has-filter'

          / = new_pagination @referentials, 'pull-right'

    - unless @referentials.any?
      .row.mt-xs
        .col-lg-12
          = replacement_msg t('referentials.search_no_results')

= javascript_include_tag 'filters/referential.js'
